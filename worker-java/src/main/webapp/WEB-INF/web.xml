<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>com.ticketpro.usuario.UsuarioControlador</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>

     <servlet>
        <servlet-name>EventoServlet</servlet-name>
        <servlet-class>com.ticketpro.evento.EventoControlador</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EventoServlet</servlet-name>
        <url-pattern>/evento</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IngressoServlet</servlet-name>
        <servlet-class>com.ticketpro.ingresso.IngressoControlador</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>IngressoServlet</servlet-name>
        <url-pattern>/ingresso</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PedidoServlet</servlet-name>
        <servlet-class>com.ticketpro.pedido.PedidoControlador</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PedidoServlet</servlet-name>
        <url-pattern>/pedido</url-pattern>
    </servlet-mapping>
</web-app>